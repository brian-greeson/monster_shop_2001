<!DOCTYPE html>
<html>
  <head>
    <title>Monster Shop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class = "topnav">
      <%= link_to "Home", "/" %>
      <%= link_to "All Merchants", "/merchants"%>
      <%= link_to "All Items", "/items"%>
      <%= link_to "Cart: #{cart.total_items}", "/cart" %>
      <%= link_to "Register", register_path if !current_user %>
      <%= link_to "Login", login_path if !current_user %>
      <%= link_to "View My Profile", "/profile" if current_user %>
      <%= link_to "Dashboard", merchant_dashboard_path if current_user && current_user.role == "merchant" %>
      <%= link_to "Logout", '/logout', method: :delete if current_user %>
    </nav>
    <% flash.each do |name, msg| %>
      <div class= "<%=name%>-flash">
        <p><%= msg %></p>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
