<%= form_tag "/profile" do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  <%= label_tag :street_address, "Street Address" %>
  <%= text_field_tag :street_address %>
  <%= label_tag :city %>
  <%= text_field_tag :city %>
  <%= label_tag :state %>
  <%= text_field_tag :state %>
  <%= label_tag :zip_code, "Zip Code" %>
  <%= text_field_tag :zip_code %>
  <%= label_tag :email_address, "Email Address" %>
  <%= text_field_tag :email_address %>

  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <%= label_tag :password_confirmation, "Confirm Password" %>
  <%= password_field_tag :password_confirmation %>

  <%= submit_tag "Submit" %>
<% end %>
