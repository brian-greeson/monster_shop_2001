<%= form_tag '/profile', method: :post do |f| %>
  <%= label_tag :name, "Name" %>
  <%= text_field_tag "user_detail_attributes[name]", "#{@user.user_detail.name}" %>
  <%= label_tag :street_address, "Street Address" %>
  <%= text_field_tag "user_detail_attributes[street_address]", "#{@user.user_detail.street_address}" %>
  <%= label_tag :city %>
  <%= text_field_tag "user_detail_attributes[city]", "#{@user.user_detail.city}" %>
  <%= label_tag :state %>
  <%= text_field_tag "user_detail_attributes[state]", "#{@user.user_detail.state}" %>
  <%= label_tag :zip_code, "Zip Code" %>
  <%= text_field_tag "user_detail_attributes[zip_code]", "#{@user.user_detail.zip_code}" %>
  <%= label_tag :email_address, "Email Address" %>
  <%= text_field_tag :email_address, "" %>
  <%= label_tag :password %>
  <%= password_field_tag :password, "" %>
  <%= label_tag :password_confirmation, "Confirm Password" %>
  <%= password_field_tag :password_confirmation, "" %>
  <%= submit_tag "Submit" %>
<% end %>
